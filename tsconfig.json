// prettier-ignore
{
  "extends": "@tsconfig/react-native/tsconfig.json",     /* Recommended React Native TSConfig base */
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */

    /* Completeness */
    "skipLibCheck": true,                                 /* Skip type checking all .d.ts files. */
    "baseUrl": "./src",
    "paths": {
      "@assets/*": ["assets/*"],
      "@modules/*": ["modules/*"],
      "@components/*": ["components/*"],
      "@constants/*": ["constants/*"],
      "@hooks/*": ["hooks/*"],
      "@context/*": ["context/*"],
      "@routes/*": ["routes/*"],
      "@screens/*": ["screens/*"],
      "@services/*": ["services/*"],
      "@slices/*": ["slices/*"],
      "@schemas/*": ["schemas/*"],
      "@store/*": ["store/*"],
      "@hoc/*": ["hoc/*"],
      "@themes/*": ["themes/*"],
      "@utils/*": ["utils/*"],
    },
  }
}
